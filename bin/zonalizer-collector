#!/usr/bin/env perl

use common::sense;

use Lim::Plugin::Zonalizer::Collector;

=encoding utf8

=head1 NAME

zonalizer-collector - Collector that runs Zonemaster in multiple threads.

=cut

STDOUT->autoflush( 1 );

Lim::Plugin::Zonalizer::Collector->new_with_options->run;

